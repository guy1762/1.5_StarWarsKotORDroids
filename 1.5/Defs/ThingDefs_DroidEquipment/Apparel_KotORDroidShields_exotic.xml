<Defs>


  <ThingDef ParentName="guy762_DroidShieldCraftableBase">
    <defName>guy762_DroidShield_arkanian</defName>
    <label>Arkanian droid defense shield</label>
    <description>One of the first forays into droid-specific shield technology, Arkanian shields still hold up in modern times. The small power source can burn out when repeatedly stressed, requiring replacement of the entire unit.</description>
    <graphicData>
      <texPath>Items/droidshield/droidshield_tier1_ark</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>640</MarketValue>
	  
	  <WorkToMake>1500</WorkToMake>
    </statBases>
	
	<recipeMaker>
      <researchPrerequisite>guy762_ResearchKotOR_droidshields</researchPrerequisite>
	  <skillRequirements>
		<Crafting>6</Crafting>
	  </skillRequirements>
    </recipeMaker>
    <costList>
      <guy762_energyshield_arkanian>1</guy762_energyshield_arkanian>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
	
    <apparel>
	  <tags>
		<li>KotORDroidShield_t2</li>
		<li>KotORDroidShield_mid</li>
	  </tags>
    </apparel>
	<tradeTags>
      <li>guy762TT_DroidEquipment</li>
	  <li>guy762TT_DroidShields</li>
    </tradeTags>
	<verbs>
      <li Class="SelfHediffVerb.VerbProperties_SelfHediff">
        <label>activate shield</label>
        
        <verbClass>SelfHediffVerb.Verb_SelfHediff</verbClass>
        <hediffDef>guy762_EShield_arkanian</hediffDef>
        <inDanger>true</inDanger>
        <hasStandardCommand>true</hasStandardCommand>
        <targetable>false</targetable>
        <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
        <onlyManualCast>True</onlyManualCast>
        <soundCast>kotorsound_shieldpowerup</soundCast>
		<violent>false</violent>
      </li>
    </verbs>
	<comps>
		<li Class="CompProperties_ApparelReloadable">
			<maxCharges>5</maxCharges>
			<destroyOnEmpty>true</destroyOnEmpty>
			<hotKey>Misc4</hotKey>
			<chargeNoun>usage</chargeNoun>
			<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
		</li>
    </comps>
  </ThingDef>
  
  
